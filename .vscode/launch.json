{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
				"PYDEVD_LOAD_NATIVE_LIB": "0",
                "PYDEVD_USE_CYTHON":"0"
            },
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "./flaskr/tools/flask_mongo/run.py", // flasker
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "ENV_FILE_LOCATION": "./.env.test"
            },
            "args": [
                "run"
            ],
            "jinja": true
        },
        {
          "name": "Python: Flask plotly",
          "type": "debugpy",
          "request": "launch",
          "module": "flask",
          "env": {
              "FLASK_APP": "flaskr/tools/plotly_web_scipy/plotly_web_scipy/app.py",
              "FLASK_DEBUG": "1"
          },
          "args": [
              "run",
              "--no-debugger",
              "--no-reload"
          ],
          "jinja": true,
          "justMyCode": true
      },
      {
        "name": "Python:Streamlit",
        "type": "python",
        "request": "launch",
        "module": "streamlit",
        "args": [
              "run",
              "${file}",
              "--server.port",
              "3001"
        ]
      },
      {
        "name": "Python:Manim",
        "type": "python",
        "request": "launch",
        "module": "manim",
        "args": [
              "-pql",
              "${file}",
              "Main"
        ]
      }
    ]
}
